---
import '../styles/global.css';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja" class="bg-white scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="説明、ファビコン何にしましょうか" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-body text-[#222] overflow-hidden">
		<slot />
	</body>
</html>
